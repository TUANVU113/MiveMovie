<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center ms-3" href="/home">
                <img src="@Url.Content("~/Content/Images/logo.png")" alt="Company Logo" width="100" height="100" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/home/index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/movies/index">Phim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="bg-dark py-3 mt-auto">
        <div class="container text-center">
            <p class="mb-0 text-white">&copy; @DateTime.Now.Year - MineMovie</p>
        </div>
    </footer>
</body>
</html>